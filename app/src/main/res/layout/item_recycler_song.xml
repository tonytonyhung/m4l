<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/card_song_height"
                                    android:layout_marginBottom="@dimen/margin_small"
                                    app:cardElevation="@dimen/card_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/padding_small"
        android:paddingRight="@dimen/padding_small">

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/text_normal"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txt_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/text_normal"/>

        <LinearLayout
            android:id="@+id/linear_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/margin_big"
            android:layout_alignParentLeft="true">

            <ImageView
                android:layout_width="@dimen/width_height_icon_small_song"
                android:layout_height="@dimen/width_height_icon_small_song"
                android:layout_marginRight="@dimen/margin_small"
                android:scaleType="fitCenter"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_headphone"/>

            <TextView
                android:id="@+id/txt_total_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_small"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/linear_view">

            <ImageView
                android:layout_width="@dimen/width_height_icon_small_song"
                android:layout_height="@dimen/width_height_icon_small_song"
                android:layout_marginRight="@dimen/margin_small"
                android:scaleType="fitCenter"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_love_unselect"/>

            <TextView
                android:id="@+id/txt_love"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/img_play"
            android:layout_width="@dimen/width_height_icon_song"
            android:layout_height="@dimen/width_height_icon_song"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/img_download"
            android:layout_marginRight="@dimen/margin_small"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_play"/>

        <ImageView
            android:id="@+id/img_download"
            android:layout_width="@dimen/width_height_icon_song"
            android:layout_height="@dimen/width_height_icon_song"
            android:layout_toLeftOf="@+id/img_love"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_small"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_download"/>

        <ImageView
            android:id="@+id/img_love"
            android:layout_width="@dimen/width_height_icon_song"
            android:layout_height="@dimen/width_height_icon_song"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_love_select"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>